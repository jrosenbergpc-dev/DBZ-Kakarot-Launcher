<UserControl x:Class="DBZK_GUI.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBZK_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" MouseUp="UserControl_MouseUp" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Cursor="Hand" MinHeight="50" MaxHeight="40" Margin="0,0,0,5">
    <Border x:Name="ButtonBG" BorderBrush="Gray" CornerRadius="25,25,25,25" BorderThickness="2,2,2,2">
        <Grid>
            <Rectangle RadiusX="25" RadiusY="25" >
                <Rectangle.Fill>
                    <RadialGradientBrush RadiusX="0.5" RadiusY="2">
                        <GradientStop Color="#CC000000" Offset="0.7"/>
                        <GradientStop Color="#BF191919" Offset="1"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="OptionLabel" FontFamily="Lucida Sans" Content="Option" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="20" FontWeight="Bold" Foreground="Gainsboro" />
        </Grid>
    </Border>
</UserControl>
