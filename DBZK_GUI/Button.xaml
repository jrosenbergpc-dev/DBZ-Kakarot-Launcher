<UserControl x:Class="DBZK_GUI.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBZK_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800" Background="#FFB3550F" MouseUp="UserControl_MouseUp" Margin="10,5,10,0" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Cursor="Hand" MinHeight="40" MaxHeight="40">
    <Grid>
        <Rectangle x:Name="TopHighlight" VerticalAlignment="Top" MinHeight="1" MaxHeight="1" Fill="#FFFBED46" Visibility="Collapsed" />
        <Rectangle VerticalAlignment="Bottom" MaxHeight="1" MinHeight="1" Fill="#FF8E794A" />
        <Label x:Name="OptionLabel" FontFamily="Lucida Sans" Content="Option" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="20" FontWeight="Bold" Foreground="Gainsboro" />
    </Grid>
</UserControl>
