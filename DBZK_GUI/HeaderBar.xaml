<UserControl x:Class="DBZK_GUI.HeaderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBZK_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="1013" MaxWidth="1013" MaxHeight="72" MinHeight="72">
    <UserControl.Background>
        <ImageBrush ImageSource="/DBZK_GUI;component/Graphics/header_bar.png" Stretch="Fill"/>
    </UserControl.Background>
    <Grid>
        <Label x:Name="HeaderLabel" Content="Header" Foreground="#FF3F1E0B" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,5" FontWeight="Bold" FontFamily="Lucida Sans" FontSize="36" />
    </Grid>
</UserControl>
